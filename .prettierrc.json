{
  "arrowParens": "always",
  "bracketSpacing": true,
  "jsxSingleQuote": true,
  "printWidth": 120,
  "semi": true,
  "singleQuote": true,
  "trailingComma": "none",
  "tabWidth": 2,
  "useTabs": false,
  "endOfLine": "auto",
  "proseWrap": "always",
  "overrides": [
    {
      "files": ["*.md"],
      "options": {
        "printWidth": 80
      }
    }
  ],
  "plugins": ["prettier-plugin-tailwindcss"]
}
